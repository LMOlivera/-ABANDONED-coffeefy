html(lang="en")
  head
    title Coffeefy
    meta(name='description' content="Tired of arguing over who's turn is it to make coffee? This site is for you!")
    link#favicon(rel='icon', href='https://cdn.glitch.com/eb2d7dec-04ef-480d-8616-087d63d88275%2FCoffee.ico?1556809358242', type='image/x-icon')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel="stylesheet"
         href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
         integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf"
         crossorigin="anonymous")
    link(href='/css/style.css', rel='stylesheet')         
    script(src="/js/login-signup.js" defer)
    
  body
  
    header
      center
        h1 Coffeefy
        p No more arguments in your office!
      
    main
      div(class="container" id="container")
          div(class="form-container sign-up-container")
            form(class="height-100" action="/signup", method="post" autocomplete="off")
              h1(class="h1-login-signup") Create Account
              if already==true
                p(class="txt-error") The username you just entered is already taken :(
              //div(class="social-container")
                //a(href="#" class="social")
                //  i(class="fab fa-facebook-f")
                //a(href="#" class="social")
                //  i(class="fab fa-linkedin-in")
              //span or use your email for registration
              input(class="width-100" name="username" type="text" placeholder="Account name" required)
              label Choose a sorting mode:
                select(name="mode" style="display: inline-block;" required)
                  option(value="list") List order
                  option(value="times") Times made
              input(class="width-100" name="maker" type="text" placeholder="Main maker's name" required)
              input(class="width-100" name="password" type="password" placeholder="Main maker's password" required)
              input(class="width-100" type="submit" value="Sign Up") 
              
          div(class="form-container sign-in-container")
            form(class="height-100" action="/signin", method="post")
              h1(class="h1-login-signup") Go to account
              if exists==false
                p(class="txt-error") The Account just entered is wrong :(
              //div(class="social-container")
                //  a(href="#" class="social")
                  //  i(class="fab fa-facebook-f")
                //  a(href="#" class="social")
                  //  i(class="fab fa-linkedin-in")
              input(class="width-100" name="username" type="text" placeholder="Username" required)
              input(class="width-100" type="submit" value="Go to Account's login")
              
          div(class="overlay-container")
            div(class="overlay")
              div(class="overlay-panel overlay-left")
                h1(class="h1-login-signup") Welcome Back!
                  p(class="txt-white") Do you already have an account?
                  button(class="ghost" id="signIn") Log In!
              div(class="overlay-panel overlay-right")
                  h1(class="h1-login-signup") Hello!
                  p(class="txt-white") You don't have an Account yet?
                  button(class="ghost" id="signUp") Create one now!